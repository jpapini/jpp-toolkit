{
    "name": "@jpp/cli",
    "version": "0.0.8",
    "description": "CLI tool for JS/TS project development workflows.",
    "keywords": [
        "jpp",
        "cli"
    ],
    "homepage": "https://github.com/jpapini/jpp/tree/main/packages/cli#readme",
    "bugs": {
        "url": "https://github.com/jpapini/jpp/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jpapini/jpp.git",
        "directory": "packages/cli"
    },
    "license": "MIT",
    "author": "Julien Papini <julien.papini@gmail.com> (https://github.com/jpapini)",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "./bin": "./bin/run.js",
        "./package.json": "./package.json"
    },
    "bin": {
        "jpp": "./bin/run.js"
    },
    "files": [
        "bin/run.js",
        "dist",
        "src",
        "oclif.config.js",
        "oclif.manifest.json"
    ],
    "scripts": {
        "typecheck": "tsc --noEmit --pretty",
        "dev": "build-lib --watch",
        "build": "build-lib",
        "prepack": "oclif manifest"
    },
    "dependencies": {
        "@jpp/plugin-build": "workspace:*",
        "@jpp/plugin-check-updates": "workspace:*",
        "@jpp/plugin-clean": "workspace:*",
        "@jpp/plugin-lint": "workspace:*",
        "@oclif/core": "4.8.0",
        "@oclif/plugin-help": "6.2.36"
    },
    "devDependencies": {
        "oclif": "4.22.50",
        "tsx": "4.20.6"
    },
    "packageManager": "pnpm@10.23.0",
    "engines": {
        "node": "24",
        "pnpm": "10"
    },
    "volta": {
        "extends": "../../package.json"
    },
    "publishConfig": {
        "access": "public"
    }
}
