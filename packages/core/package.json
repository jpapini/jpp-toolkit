{
    "name": "@jpp/core",
    "version": "0.0.11",
    "description": "Core utilities for jpp cli and plugins.",
    "keywords": [
        "jpp",
        "core"
    ],
    "homepage": "https://github.com/jpapini/jpp/tree/main/packages/core#readme",
    "bugs": {
        "url": "https://github.com/jpapini/jpp/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jpapini/jpp.git",
        "directory": "packages/core"
    },
    "license": "MIT",
    "author": "Julien Papini <julien.papini@gmail.com> (https://github.com/jpapini)",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "typecheck": "tsc --noEmit --pretty",
        "dev": "build-lib --watch",
        "build": "build-lib"
    },
    "dependencies": {
        "@jpp/logger": "workspace:*"
    },
    "devDependencies": {
        "@oclif/core": "4.8.0"
    },
    "peerDependencies": {
        "@oclif/core": "4"
    },
    "packageManager": "pnpm@10.24.0",
    "engines": {
        "node": "24",
        "pnpm": "10"
    },
    "volta": {
        "extends": "../../package.json"
    },
    "publishConfig": {
        "access": "public"
    }
}
