{
    "name": "@jpp/plugin-build",
    "version": "0.0.8",
    "description": "Plugin that add the build command to the jpp cli.",
    "keywords": [
        "jpp",
        "plugin",
        "build"
    ],
    "homepage": "https://github.com/jpapini/jpp/tree/main/packages/plugin-build#readme",
    "bugs": {
        "url": "https://github.com/jpapini/jpp/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jpapini/jpp.git",
        "directory": "packages/plugin-build"
    },
    "license": "MIT",
    "author": "Julien Papini <julien.papini@gmail.com> (https://github.com/jpapini)",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "src",
        "oclif.config.js",
        "oclif.manifest.json"
    ],
    "scripts": {
        "typecheck": "tsc --noEmit --pretty",
        "dev": "build-lib --watch",
        "build": "build-lib",
        "prepack": "oclif manifest"
    },
    "dependencies": {
        "@jpp/core": "workspace:*",
        "@jpp/tsdown-config": "workspace:*",
        "@jpp/utils": "workspace:*",
        "@oclif/core": "4.8.0",
        "tsdown": "0.16.6"
    },
    "devDependencies": {
        "oclif": "4.22.50"
    },
    "packageManager": "pnpm@10.23.0",
    "engines": {
        "node": "24",
        "pnpm": "10"
    },
    "volta": {
        "extends": "../../package.json"
    },
    "publishConfig": {
        "access": "public"
    }
}
