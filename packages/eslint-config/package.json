{
    "name": "@jpp-toolkit/eslint-config",
    "version": "0.0.15",
    "description": "ESLint configurations for JS/TS projects.",
    "keywords": [
        "jpp",
        "eslint",
        "config"
    ],
    "homepage": "https://github.com/jpapini/jpp-toolkit/tree/main/packages/eslint-config#readme",
    "bugs": {
        "url": "https://github.com/jpapini/jpp-toolkit/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jpapini/jpp-toolkit.git",
        "directory": "packages/eslint-config"
    },
    "license": "MIT",
    "author": "Julien Papini <julien.papini@gmail.com> (https://github.com/jpapini)",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "typecheck": "tsc --noEmit --pretty",
        "dev": "build-lib --watch",
        "build": "build-lib"
    },
    "dependencies": {
        "@eslint/compat": "2.0.0",
        "@eslint/js": "9.39.1",
        "@jpp-toolkit/utils": "workspace:*",
        "@stylistic/eslint-plugin": "5.6.1",
        "@vitest/eslint-plugin": "1.5.2",
        "eslint-config-prettier": "10.1.8",
        "eslint-import-resolver-typescript": "4.4.4",
        "eslint-plugin-import-x": "4.16.1",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-perfectionist": "4.15.1",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "7.0.1",
        "eslint-plugin-unicorn": "62.0.0",
        "globals": "16.5.0",
        "typescript-eslint": "8.49.0"
    },
    "devDependencies": {
        "@types/eslint-plugin-jsx-a11y": "6.10.1",
        "eslint": "9.39.1"
    },
    "peerDependencies": {
        "eslint": "9"
    },
    "packageManager": "pnpm@10.25.0",
    "engines": {
        "node": "24",
        "pnpm": "10"
    },
    "volta": {
        "extends": "../../package.json"
    },
    "publishConfig": {
        "access": "public"
    }
}
